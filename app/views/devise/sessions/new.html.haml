%h2 Sign in
= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  .inputs
    = f.label :email
    = f.text_field :email
    = f.label :password
    = f.password_field :password
    - if devise_mapping.rememberable?
      %br
      = f.check_box :remember_me
      = f.label :remember_me
  .actions
    = f.submit "Sign in"
= render :partial => "devise/shared/links"
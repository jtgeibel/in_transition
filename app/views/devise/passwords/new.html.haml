%h2 Forgot your password?
= form_for(resource, :as => resource_name, :url => password_path(resource_name)) do |f|
  = devise_error_messages!
  .inputs
    = f.label :email
    = f.text_field :email
  .actions
    = f.submit "Send me reset password instructions"
= render :partial => "devise/shared/links"
